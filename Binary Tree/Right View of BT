/* A binary tree node

struct Node
{
    int data;
    struct Node* left;
    struct Node* right;
    
    Node(int x){
        data = x;
        left = right = NULL;
    }
};
 */

//Function to return a list containing elements of left view of the binary tree.

		vector<int> leftView(Node* root) {
		    vector<int> ans;
		    if(!root) return ans;
		    queue<Node*> q;
	    	q.push(root);
	    	
		    while(!q.empty()) {
        	    int sz = q.size();
                ans.push_back(q.front()->data);	
                while(sz--) {
	                Node* t = q.front();
                 	q.pop();
                	if(t->left) q.push(t->left);
        	     if(t->right) q.push(t->right);
                }
            }
            return ans;
        }

